<p id="notice"><%= notice %></p>
<script type="text/javascript">
  $(document).ready(function() {
    // Sort by Time per default
    setTimeout(function() {
      $("th:contains('Name')").click();
    }, 250);
  });
</script>
<h4>
  Weather Stations
</h4>
<h6><em>(<strong>hint:</strong> the table is sortable)</em></h6>

<table class="table table-striped table-bordered sortable-theme-bootstrap" data-sortable>
  <thead>
    <tr>
      <th>ID</tD>
      <th>Name</th>
      <th>Last updated</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Measurements stored</th>
    </tr>
  </thead>

  <tbody>
    <% @stations.each do |station| %>
      <tr class="station" id="<%= station.id %>">
        <td><%= station.id %></td>
        <td class="name"><%= station.name %></td>
        <td class="last_update"><%= Time.at(station.last_measurement.timestamp).strftime("%H:%M%P %d-%m-%Y") %></td>
        <td class="latitude"><%= station.lat %></td>
        <td class="longitude"><%= station.lon %></td>
        <td class="measurement_count"><%= station.measurements.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
