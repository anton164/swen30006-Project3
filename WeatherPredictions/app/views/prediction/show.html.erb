<p id="notice"><%= notice %></p>
<script type="text/javascript">
  setTimeout("location.reload(true);", 60 * 1000 * <%= @page_refresh_m %>);
  $(document).ready(function() {
    // Sort by Location per default
    setTimeout(function() {
    $("th:contains('Time')").click();
  }, 250);
  });
</script>
<h4>
  Prediction for (<%= @loc.coordinates[0].to_s + ", " + @loc.coordinates[1].to_s %>) in postal code <%= @loc.postal_code %>, <%=@loc.city=%></br>
</h4>
<h6><em>(<strong>hint:</strong> the table is sortable)</em></h6>

<table class="table table-striped table-bordered sortable-theme-bootstrap" data-sortable>
  <thead>
    <tr>
      <th>Time</th>
      <th>Rainfall (60 min, mm)</th>
      <th>Temperature (C)</th>
      <th>Probability</th>
      <th>Wind direction</th>
      <th>Wind speed (km/h)</th>
    </tr>
  </thead>

  <tbody>
    <% @data["predictions"].each do |time_until, prediction| %>
      <tr>
        <td><%= Time.at(@now + time_until * 60).to_formatted_s(:short) %></td>
        <td><%= prediction["precipitation"][:value].round(1).to_s + 
                "mm (" + prediction["precipitation"][:probability].round(2).to_s + "%)" %></td>
        <td></td>
        <td></td>
        <td><i class="fa fa-long-arrow-up wind-arrow" style="transform: rotate(360deg)"></i></td>
        <td></td>
      </tr>
    <% end %>
  </tbody>
</table>
