<p id="notice"><%= notice %></p>

<h1>Listing Weather Stations</h1>

<table>
  <thead>
    <tr>
      <th>Postal code</th>
      <th>Lat</th>
      <th>Lon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weather_stations.each do |weather_station| %>
      <tr>
        <td><%= weather_station.postal_code %></td>
        <td><%= weather_station.lat %></td>
        <td><%= weather_station.lon %></td>
        <td><%= link_to 'Show', weather_station %></td>
        <td><%= link_to 'Edit', edit_weather_station_path(weather_station) %></td>
        <td><%= link_to 'Destroy', weather_station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

